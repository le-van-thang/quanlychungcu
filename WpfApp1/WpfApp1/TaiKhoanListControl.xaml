<UserControl x:Class="WpfApp1.TaiKhoanListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <!-- =============== RESOURCES =============== -->
    <UserControl.Resources>

        <!-- Đổ bóng cho card -->
        <DropShadowEffect x:Key="TkCardShadow"
                          Color="#000000"
                          Direction="270"
                          ShadowDepth="8"
                          BlurRadius="20"
                          Opacity="0.30"/>

        <!-- Nền card nhẹ -->
        <LinearGradientBrush x:Key="TkCardBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F8FBFF" Offset="0"/>
            <GradientStop Color="#ECF3FF" Offset="1"/>
        </LinearGradientBrush>

        <!-- Header Gradient -->
        <LinearGradientBrush x:Key="TkHeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#8E44AD" Offset="0"/>
            <GradientStop Color="#3498DB" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="TkHeaderTextBrush" Color="White"/>

        <!-- Cell căn giữa -->
        <Style x:Key="TkCenterCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- DataGrid hiện đại -->
        <Style x:Key="TkModernGrid" TargetType="{x:Type DataGrid}">
            <Setter Property="RowBackground" Value="#FFFFFF"/>
            <Setter Property="AlternatingRowBackground" Value="#F4F6F7"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#D0D7E2"/>
            <Setter Property="VerticalGridLinesBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="GridLinesVisibility" Value="All"/>

            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Visible"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        </Style>

        <!-- Hover row -->
        <Style x:Key="TkRowHoverStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <!-- =============== MAIN CARD =============== -->
    <Border Background="{StaticResource TkCardBackgroundBrush}"
            CornerRadius="26"
            Padding="22"
            Margin="35"
            VerticalAlignment="Top"
            MinHeight="520"
            Effect="{StaticResource TkCardShadow}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- header -->
                <RowDefinition Height="Auto"/>
                <!-- search -->
                <RowDefinition Height="Auto"/>
                <!-- actions -->
                <RowDefinition Height="*"/>
                <!-- grid -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0"
                    Background="{StaticResource TkHeaderGradientBrush}"
                    CornerRadius="20"
                    Padding="18"
                    Margin="0 0 0 18">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="👥"
                               FontSize="24"
                               Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Tất cả tài khoản"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TkHeaderTextBrush}"/>
                        <TextBlock Text="Quản lý tài khoản người dùng hệ thống"
                                   FontSize="12"
                                   Foreground="#F0F3FF"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- SEARCH -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="10,0,0,10">
                <TextBox x:Name="txtSearch"
                         Width="340" Height="35"
                         Margin="0,0,10,0"
                         FontSize="14"
                         Padding="8"
                         Style="{StaticResource InputTextBox}"
                         Tag="Tìm theo Username / Họ tên / Email / Vai trò"/>
                <Button x:Name="btnSearch"
                        Content="🔍 Tìm kiếm"
                        Width="130" Height="35"
                        Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}"
                        Background="#7D3C98"
                        Click="BtnSearch_Click"/>
            </StackPanel>

            <!-- ACTION BUTTONS -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="10,0,0,10">
                <Button x:Name="btnReload"
                        Content="🔄 Tải lại"
                        Width="110" Height="35"
                        Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}"
                        Background="#3498DB"
                        Click="BtnReload_Click"/>
                <Button x:Name="btnView"
                        Content="👁 Xem"
                        Width="110" Height="35"
                        Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}"
                        Background="#5DADE2"
                        Click="BtnView_Click"/>
                <Button x:Name="btnAdd"
                        Content="➕ Thêm"
                        Width="110" Height="35"
                        Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}"
                        Background="#58D68D"
                        Click="BtnAdd_Click"/>
                <Button x:Name="btnEdit"
                        Content="✏ Sửa"
                        Width="110" Height="35"
                        Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}"
                        Background="#F5B041"
                        Click="BtnEdit_Click"/>
                <Button x:Name="btnDelete"
                        Content="🗑 Xóa"
                        Width="110" Height="35"
                        Style="{StaticResource ModernButton}"
                        Background="#E74C3C"
                        Click="BtnDelete_Click"/>
            </StackPanel>

            <!-- GRID -->
            <DataGrid x:Name="dgTaiKhoan"
                       AutomationProperties.AutomationId="Grid_TaiKhoan"
                      Grid.Row="3"
                      Margin="0,5,0,0"
                      MaxHeight="430"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Style="{StaticResource TkModernGrid}"
                      RowStyle="{StaticResource TkRowHoverStyle}"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalContentAlignment"   Value="Center"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding"    Value="8,0"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã TK"
                                        Binding="{Binding TaiKhoanID}"
                                        Width="80"
                                        ElementStyle="{StaticResource TkCenterCell}"/>
                    <DataGridTextColumn Header="Username"
                                        Binding="{Binding Username}"
                                        Width="140"/>
                    <DataGridTextColumn Header="Họ tên"
                                        Binding="{Binding HoTen}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Email"
                                        Binding="{Binding Email}"
                                        Width="220"/>
                    <DataGridTextColumn Header="Vai trò"
                                        Binding="{Binding VaiTro}"
                                        Width="140"
                                        ElementStyle="{StaticResource TkCenterCell}"/>
                    <DataGridTextColumn Header="Trạng thái"
                                        Binding="{Binding TrangThai}"
                                        Width="130"
                                        ElementStyle="{StaticResource TkCenterCell}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</UserControl>
