<UserControl x:Class="WpfApp1.CanHoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <!-- =============== RESOURCES =============== -->
    <UserControl.Resources>

        <!-- Đổ bóng cho card -->
        <DropShadowEffect x:Key="CardShadow"
                          Color="#000000"
                          Direction="270"
                          ShadowDepth="8"
                          BlurRadius="20"
                          Opacity="0.35"/>

        <!-- Nền card hơi xanh, không trắng toát -->
        <LinearGradientBrush x:Key="CardBackgroundBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F8FBFF" Offset="0"/>
            <GradientStop Color="#ECF3FF" Offset="1"/>
        </LinearGradientBrush>

        <!-- Header Gradient -->
        <LinearGradientBrush x:Key="HeaderGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#4CAF50" Offset="0"/>
            <GradientStop Color="#2196F3" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="HeaderTextBrush" Color="White"/>

        <!-- Căn giữa / phải cho cell -->
        <Style x:Key="CenterCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="RightAlignCell" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Padding" Value="0,0,6,0"/>
        </Style>

        <!-- Grid hiện đại (chỉ DataGrid tự scroll) -->
        <Style x:Key="ModernGrid" TargetType="{x:Type DataGrid}">
            <Setter Property="RowBackground" Value="#FFFFFF"/>
            <Setter Property="AlternatingRowBackground" Value="#F4F6F7"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#D0D7E2"/>
            <Setter Property="VerticalGridLinesBrush" Value="#D0D7E2"/>
            <Setter Property="BorderThickness" Value="0"/>

            <!-- Chỉ DataGrid có thanh kéo, không ép luôn hiện -->
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        </Style>

        <!-- Hover row -->
        <Style x:Key="RowHoverStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#BBDEFB"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <!-- =============== MAIN CARD =============== -->
    <!-- Card giới hạn chiều cao để DataGrid phải tự scroll -->
    <Border Background="{StaticResource CardBackgroundBrush}"
            CornerRadius="26"
            Padding="22"
            Margin="35"
            VerticalAlignment="Top"
            Effect="{StaticResource CardShadow}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0"
                    Background="{StaticResource HeaderGradientBrush}"
                    CornerRadius="20"
                    Padding="18"
                    Margin="0 0 0 18">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🏢"
                               FontSize="24"
                               Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock Text="Quản lý căn hộ"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource HeaderTextBrush}"/>
                        <TextBlock Text="Xem, tìm kiếm và quản lý thông tin căn hộ trong khu dân cư"
                                   FontSize="12"
                                   Foreground="#F0F3FF"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- SEARCH: canh trái -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="10,0,0,10">
                <TextBox x:Name="txtCanHoSearch"
                         Width="320" Height="35"
                         Margin="0,0,10,0"
                         FontSize="14"
                         Padding="8"
                         Style="{StaticResource InputTextBox}"
                         Tag="Tìm theo số căn / tầng"/>
                <Button Content="🔍 Tìm kiếm"
                        Width="120" Height="35"
                        Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}"
                        Background="#7D3C98"
                        Click="BtnSearch_Click"/>
                <Button Content="🔄 Tải lại"
                        Width="120" Height="35"
                        Style="{StaticResource ModernButton}"
                        Background="#2ECC71"
                        Click="BtnReload_Click"/>
            </StackPanel>

            <!-- ACTION BUTTONS: canh trái -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="10,0,0,10">
                <Button x:Name="btnView"
                        Content="👁 Xem"
                        Width="110" Height="35"
                        Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}"
                        Background="#5DADE2"
                        Click="BtnView_Click"/>

                <Button x:Name="btnThem"
                        Content="➕ Thêm"
                        Width="110" Height="35"
                        Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}"
                        Background="#58D68D"
                        Click="BtnAdd_Click"/>

                <Button x:Name="btnSua"
                        Content="✏ Sửa"
                        Width="110" Height="35"
                        Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}"
                        Background="#F5B041"
                        Click="BtnEdit_Click"/>

                <Button x:Name="btnXoa"
                        Content="🗑 Xóa"
                        Width="110" Height="35"
                        Style="{StaticResource ModernButton}"
                        Background="#E74C3C"
                        Click="BtnDelete_Click"/>
            </StackPanel>

            <!-- GRID: giới hạn MaxHeight để buộc DataGrid tự scroll -->
            <DataGrid x:Name="dgCanHoGrid"
                      Grid.Row="3"
                      Margin="0,5,0,0"
                      MaxHeight="430"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Style="{StaticResource ModernGrid}"
                      RowStyle="{StaticResource RowHoverStyle}"
                      BorderThickness="0"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      SelectionUnit="FullRow">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding CanHoID}"
                                        Width="70"
                                        ElementStyle="{StaticResource CenterCell}"/>

                    <DataGridTextColumn Header="Số căn hộ" Binding="{Binding SoCanHo}"
                                        Width="120"/>

                    <DataGridTextColumn Header="Tầng" Binding="{Binding TenTang}"
                                        Width="140"
                                        ElementStyle="{StaticResource CenterCell}"/>

                    <DataGridTextColumn Header="Diện tích (m²)" Binding="{Binding DienTich}"
                                        Width="110"
                                        ElementStyle="{StaticResource RightAlignCell}"/>

                    <DataGridTextColumn Header="Giá trị" Binding="{Binding GiaTri}"
                                        Width="160"
                                        ElementStyle="{StaticResource RightAlignCell}"/>

                    <!-- Cột cuối giãn hết phần còn lại để không dư ô xám -->
                    <DataGridTextColumn Header="Số cư dân" Binding="{Binding SoCuDan}"
                                        Width="*"
                                        ElementStyle="{StaticResource CenterCell}"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </Border>

</UserControl>
