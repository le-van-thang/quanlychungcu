<Window x:Class="WpfApp1.MatBangThuongMaiDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin mặt bằng thương mại"
        Height="400" Width="720"
        MinHeight="360" MinWidth="680"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="Transparent"
        WindowStyle="SingleBorderWindow">

    <Border CornerRadius="12"
            Background="White"
            BorderBrush="#D5DBDB"
            BorderThickness="1"
            Padding="0"
            Margin="8">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- header -->
                <RowDefinition Height="*"/>
                <!-- form -->
                <RowDefinition Height="Auto"/>
                <!-- buttons -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0"
                    Background="#3498DB"
                    Padding="14"
                    CornerRadius="12,12,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🏬"
                               FontSize="22"
                               Margin="0,0,10,0"/>
                    <StackPanel>
                        <TextBlock x:Name="lblHeader"
                                   Text="Thông tin mặt bằng thương mại"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Nhập thông tin cơ bản cho mặt bằng kinh doanh"
                                   FontSize="12"
                                   Foreground="#ECF0F1"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- FORM -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tên mặt bằng -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                    <TextBlock Text="Tên mặt bằng (bắt buộc)"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBox x:Name="txtTenMatBang"
                             Margin="0,5,0,0"
                             Style="{StaticResource InputTextBox}"/>
                </StackPanel>

                <!-- Diện tích -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                    <TextBlock Text="Diện tích (m²) (bắt buộc)"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBox x:Name="txtDienTich"
                             Margin="0,5,0,0"
                             Style="{StaticResource InputTextBox}"/>
                </StackPanel>

                <!-- Giá thuê -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
                    <TextBlock Text="Giá thuê (bắt buộc)"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBox x:Name="txtGiaThue"
                             Margin="0,5,0,0"
                             Style="{StaticResource InputTextBox}"/>
                </StackPanel>

                <!-- Mã MB (readonly) -->
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
                    <TextBlock Text="Mã mặt bằng (tự tăng)"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBox x:Name="txtId"
                             Margin="0,5,0,0"
                             IsReadOnly="True"
                             Style="{StaticResource InputTextBox}"
                             Background="#ECF0F1"/>
                </StackPanel>

                <!-- Ghi chú -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
                    <TextBlock Text="Ghi chú (tuỳ chọn)"
                               FontWeight="Bold"
                               Foreground="#2C3E50"/>
                    <TextBox x:Name="txtGhiChu"
                             Margin="0,5,0,0"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Height="80"
                             Style="{StaticResource InputTextBox}"/>
                </StackPanel>
            </Grid>

            <!-- BUTTONS -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,20">
                <Button x:Name="btnSave"
                        Content="💾 Lưu"
                        Width="120" Height="35"
                        Margin="5,0,0,0"
                        Style="{StaticResource ModernButton}"
                        Background="#27AE60"
                        Click="BtnSave_Click"/>
                <Button Content="Đóng"
                        Width="120" Height="35"
                        Margin="5,0,0,0"
                        Style="{StaticResource ModernButton}"
                        Background="#7F8C8D"
                        Click="BtnClose_Click"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
