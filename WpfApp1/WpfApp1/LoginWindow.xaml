<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#FF0D1B2A">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1E90FF"/>
            <Setter Property="BorderBrush" Value="#1E90FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#187bcd"/>
                                <Setter Property="BorderBrush" Value="#187bcd"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#145a91"/>
                                <Setter Property="BorderBrush" Value="#145a91"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#555"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                                <Setter Property="BorderBrush" Value="#555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Image Source="pack://application:,,,/Assets/bg.jpg" Stretch="Fill" Opacity="0.9"/>
        <Border Background="#AA000000" Width="380" Height="420" CornerRadius="15"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20">
            <StackPanel>
                <TextBlock Text="Đăng nhập" FontSize="24" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Username -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="👤" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                    <TextBox x:Name="txtUsername"
         AutomationProperties.AutomationId="Login_Username"
         Grid.Column="1" Height="30" Padding="5"
         Foreground="White" BorderBrush="#555">

                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="#22000000"/>
                                <Style.Triggers>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="#33000000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock Text="Tên đăng nhập" Foreground="Gray"
                               Margin="35,0,0,0" VerticalAlignment="Center"
                               IsHitTestVisible="False" Grid.ColumnSpan="2">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text.Length, ElementName=txtUsername}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Password -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🔒" FontSize="16" VerticalAlignment="Center" Foreground="White"/>
                    <Grid Grid.Column="1">
                        <PasswordBox x:Name="txtPassword"
             AutomationProperties.AutomationId="Login_Password"
             Height="30" Padding="5,5,35,5"
             Foreground="White" BorderBrush="#555"
             PasswordChanged="txtPassword_PasswordChanged">
                            <PasswordBox.Style>
                                <Style TargetType="PasswordBox">
                                    <Setter Property="Background" Value="#22000000"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsKeyboardFocused" Value="True">
                                            <Setter Property="Background" Value="#33000000"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </PasswordBox.Style>
                        </PasswordBox>
                        <TextBox x:Name="txtPasswordVisible" Height="30" Padding="5,5,35,5"
                                 Foreground="White"  Background="#22000000" BorderBrush="#555" Visibility="Collapsed"/>
                        <Button x:Name="btnTogglePassword" Content="👁"
                                Width="25" Height="25"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right" Margin="0,0,5,0"
                                Background="Transparent" BorderThickness="0"
                                Foreground="White"
                                Click="btnTogglePassword_Click"/>
                        <TextBlock x:Name="txtPasswordPlaceholder" Text="Mật khẩu" Foreground="Gray"
                                   Margin="5,0,0,0" VerticalAlignment="Center"
                                   IsHitTestVisible="False"/>
                    </Grid>
                </Grid>

                <CheckBox x:Name="chkRemember" Content="Ghi nhớ tài khoản và mật khẩu"
                          Foreground="LightGray" Margin="0,0,0,10"/>

                <Button x:Name="btnLogin"
        AutomationProperties.AutomationId="Login_Button"
        Content="Đăng nhập"
        Margin="0,0,0,10"
        Click="BtnLogin_Click"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Foreground="LightGray" Margin="0,0,20,0">
                        <Hyperlink Click="ForgotPassword_Click">Quên mật khẩu</Hyperlink>
                    </TextBlock>
                    <TextBlock Foreground="LightGray">
                        <Hyperlink Click="OpenRegister_Click">Tạo tài khoản mới</Hyperlink>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <!-- Đổi Click từ Button_Click -> BtnLoginFacebook_Click -->
                    <Button x:Name="btnFacebook" Content="Đăng nhập Facebook"
            Background="#3b5998" Foreground="White"
            Width="150" Height="35" Margin="5"
            Click="BtnLoginFacebook_Click"/>

                    <!-- Thêm Click cho Google -->
                    <Button x:Name="btnGoogle" Content="Đăng nhập Google"
            Background="#db4437" Foreground="White"
            Width="150" Height="35" Margin="5"
            Click="BtnLoginGoogle_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Button Content="X" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top"
                Background="Transparent" Foreground="White" BorderThickness="0" FontWeight="Bold"
                Click="BtnClose_Click"/>
    </Grid>
</Window>
