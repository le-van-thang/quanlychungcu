<UserControl x:Class="WpfApp1.ActivityLogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid Margin="35">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Nhật ký hoạt động"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0 0 0 10"/>

        <DataGrid x:Name="dgLogs"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <!-- Cột thời gian -->
                <DataGridTextColumn Header="Thời gian" Width="160">
                    <DataGridTextColumn.Binding>
                        <Binding Path="CreatedAt"
                                 StringFormat="dd/MM/yyyy HH:mm:ss"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>

                <DataGridTextColumn Header="UserId"
                                    Binding="{Binding UserId}"
                                    Width="80"/>

                <DataGridTextColumn Header="Hành động"
                                    Binding="{Binding Action}"
                                    Width="100"/>

                <DataGridTextColumn Header="Bảng"
                                    Binding="{Binding EntityName}"
                                    Width="120"/>

                <DataGridTextColumn Header="Mã bản ghi"
                                    Binding="{Binding EntityId}"
                                    Width="100"/>

                <DataGridTextColumn Header="Chi tiết"
                                    Binding="{Binding Detail}"
                                    Width="300"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
