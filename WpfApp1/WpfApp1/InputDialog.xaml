<Window x:Class="WpfApp1.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nhập dữ liệu" Height="180" Width="420"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    <Border CornerRadius="14" Background="#1E2634" Padding="16"
            BorderBrush="#2C374A" BorderThickness="1" SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề / thông điệp -->
            <TextBlock x:Name="lblMessage"
                       Foreground="#BFC7D5" FontSize="14"
                       Margin="0,0,0,10" TextWrapping="Wrap"/>

            <!-- Ô nhập -->
            <TextBox x:Name="txtInput" Grid.Row="1"
                     Height="34" Padding="8"
                     Background="#263245"
                     Foreground="White"
                     BorderBrush="#3A4B66"
                     BorderThickness="1"
                     CaretBrush="White"/>

            <!-- Nút -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,14,0,0">
                <!-- Trở lại -->
                <Button Content="⬅ Trở lại"
                        Width="95" Height="32"
                        Background="#374151"
                        BorderBrush="#374151"
                        Foreground="#E5E7EB"
                        FontWeight="Bold"
                        Click="Back_Click"
                        Margin="0,0,8,0"
                        Cursor="Hand"/>

                <!-- OK -->
                <Button Content="✔ OK"
                        Width="95" Height="32"
                        Background="#2563EB"
                        BorderBrush="#2563EB"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Ok_Click"
                        Margin="0,0,8,0"
                        Cursor="Hand"/>

                <!-- Hủy -->
                <Button Content="✖ Hủy"
                        Width="95" Height="32"
                        Background="#DC2626"
                        BorderBrush="#DC2626"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="Cancel_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
