<UserControl x:Class="WpfApp1.TaiKhoanInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F4F6F7">

    <UserControl.Resources>
        <!-- Palette -->
        <Color x:Key="ColPrimary">#6750A4</Color>
        <Color x:Key="ColPrimaryDark">#57408F</Color>
        <Color x:Key="ColOk">#2E7D32</Color>
        <Color x:Key="ColWarn">#ED6C02</Color>
        <Color x:Key="ColDanger">#D32F2F</Color>

        <SolidColorBrush x:Key="BPrimary" Color="{StaticResource ColPrimary}"/>
        <SolidColorBrush x:Key="BPrimaryDark" Color="{StaticResource ColPrimaryDark}"/>
        <SolidColorBrush x:Key="BOk" Color="{StaticResource ColOk}"/>
        <SolidColorBrush x:Key="BWarn" Color="{StaticResource ColWarn}"/>
        <SolidColorBrush x:Key="BDanger" Color="{StaticResource ColDanger}"/>

        <SolidColorBrush x:Key="TextTitle" Color="#212121"/>
        <SolidColorBrush x:Key="TextBody" Color="#333333"/>
        <SolidColorBrush x:Key="TextMuted" Color="#777777"/>

        <!-- Card style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="18"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20"
                                      ShadowDepth="1"
                                      Opacity="0.18"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Title" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextTitle}"/>
        </Style>

        <Style x:Key="SubTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextMuted}"/>
        </Style>

        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="0,10,0,4"/>
        </Style>

        <!-- Inputs -->
        <Style x:Key="InputBase" TargetType="Control">
            <Setter Property="Height" Value="38"/>
            <Setter Property="BorderBrush" Value="#D7DBE2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Foreground" Value="{StaticResource TextBody}"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style TargetType="TextBox" BasedOn="{StaticResource InputBase}"/>
        <Style TargetType="DatePicker" BasedOn="{StaticResource InputBase}"/>
        <Style TargetType="PasswordBox" BasedOn="{StaticResource InputBase}"/>

        <!-- Rounded button -->
        <Style x:Key="PillButton" TargetType="Button">
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#C8CCD4"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="4,0,4,16">
            <TextBlock Text="Thông tin tài khoản"
                       Style="{StaticResource Title}"/>
            <TextBlock Text="Quản lý thông tin cá nhân và bảo mật đăng nhập."
                       Style="{StaticResource SubTitle}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Main content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="330"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left: avatar + basic info -->
                <Border Grid.Column="0"
                        Style="{StaticResource Card}">
                    <StackPanel>
                        <Grid Width="190"
                              Height="190"
                              HorizontalAlignment="Center"
                              Margin="0,8,0,12">
                            <Ellipse Fill="#F8F8FA"
                                     Stroke="#E0E1EC"
                                     StrokeThickness="1"/>
                            <Image x:Name="imgAvatar"
                                   Stretch="UniformToFill"
                                   ClipToBounds="True">
                                <Image.Clip>
                                    <EllipseGeometry Center="95,95"
                                                     RadiusX="95"
                                                     RadiusY="95"/>
                                </Image.Clip>
                            </Image>
                            <TextBlock x:Name="txtInitials"
                                       Text="NA"
                                       Foreground="#8B8FB3"
                                       FontWeight="Bold"
                                       FontSize="52"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>

                        <StackPanel Margin="0,0,0,12"
                                    HorizontalAlignment="Center">
                            <TextBlock x:Name="txtEmail"
                                       Text="email@example.com"
                                       Foreground="{StaticResource TextBody}"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"/>
                            <TextBlock x:Name="txtRole"
                                       Text="Vai trò: User"
                                       Style="{StaticResource SubTitle}"
                                       TextAlignment="Center"
                                       Margin="0,2,0,0"/>
                            <TextBlock x:Name="txtUserName"
                                       Text="Tên đăng nhập: ..."
                                       Style="{StaticResource SubTitle}"
                                       TextAlignment="Center"
                                       Margin="0,2,0,0"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,4,0,0">
                            <Button x:Name="btnChangeAvatar"
                                    Content="Thay đổi ảnh"
                                    Background="{StaticResource BPrimary}"
                                    Style="{StaticResource PillButton}"
                                    Margin="0,0,10,0"
                                    Click="BtnChangeAvatar_Click"/>
                            <Button x:Name="btnRemoveAvatar"
                                    Content="Xóa ảnh"
                                    Background="{StaticResource BDanger}"
                                    Style="{StaticResource PillButton}"
                                    Click="BtnRemoveAvatar_Click"/>
                        </StackPanel>

                        <TextBlock Text="Ảnh đại diện giúp cư dân và ban quản lý dễ nhận diện bạn hơn."
                                   Style="{StaticResource SubTitle}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="8,10,8,0"/>
                    </StackPanel>
                </Border>

                <!-- Right: details + password -->
                <Border Grid.Column="2"
                        Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- basic info -->
                            <RowDefinition Height="Auto"/>
                            <!-- password -->
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <!-- buttons -->
                        </Grid.RowDefinitions>

                        <!-- Basic info -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Thông tin cá nhân"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextTitle}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="Các thông tin này chỉ dùng trong hệ thống chung cư, không công khai ra ngoài."
                                       Style="{StaticResource SubTitle}"
                                       TextWrapping="Wrap"/>

                            <TextBlock Text="Họ và tên"
                                       Style="{StaticResource FieldLabel}"
                                       Margin="0,14,0,4"/>
                            <TextBox x:Name="txtHoTen"
                                     Margin="0,0,0,4"
                                     IsReadOnly="True"/>

                            <TextBlock Text="Ngày sinh"
                                       Style="{StaticResource FieldLabel}"/>
                            <DatePicker x:Name="dpNgaySinh"
                                        Margin="0,0,0,4"
                                        IsEnabled="False"/>

                            <TextBlock x:Name="txtWarningReadonly"
                                       Style="{StaticResource SubTitle}"
                                       TextWrapping="Wrap"
                                       Margin="0,6,0,0"
                                       Visibility="Collapsed"
                                       Text="Một số trường chỉ đọc vì không có trong cơ sở dữ liệu."/>
                        </StackPanel>

                        <!-- Security + password -->
                        <StackPanel Grid.Row="1" Margin="0,16,0,0">
                            <TextBlock Text="Bảo mật &amp; mật khẩu"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextTitle}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="Nếu bạn đăng nhập bằng Google/Facebook thì thường không cần đổi mật khẩu tại đây."
                                       Style="{StaticResource SubTitle}"
                                       TextWrapping="Wrap"/>

                            <CheckBox x:Name="ckChangePw"
                                      Margin="0,10,0,0"
                                      Content="Tôi muốn đổi mật khẩu đăng nhập"
                                      IsEnabled="False"
                                      Checked="ckChangePw_Checked"
                                      Unchecked="ckChangePw_Unchecked"/>
                            <TextBlock Text="Đánh dấu để mở form đổi mật khẩu."
                                       Style="{StaticResource SubTitle}"
                                       Margin="22,2,0,0"/>

                            <StackPanel x:Name="pwPanel"
                                        Margin="0,10,0,0"
                                        Visibility="Collapsed">
                                <TextBlock Text="Mật khẩu hiện tại"
                                           Style="{StaticResource FieldLabel}"/>
                                <PasswordBox x:Name="pbOldPw"
                                             Margin="0,0,0,6"/>

                                <TextBlock Text="Mật khẩu mới"
                                           Style="{StaticResource FieldLabel}"/>
                                <PasswordBox x:Name="pbNewPw"
                                             Margin="0,0,0,4"/>
                                <TextBlock Text="Gợi ý: Nên có ít nhất 8 ký tự, gồm chữ hoa, chữ thường và số."
                                           Style="{StaticResource SubTitle}"
                                           Margin="0,0,0,6"
                                           TextWrapping="Wrap"/>

                                <TextBlock Text="Xác nhận mật khẩu mới"
                                           Style="{StaticResource FieldLabel}"/>
                                <PasswordBox x:Name="pbConfirmPw"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Buttons -->
                        <StackPanel Grid.Row="3"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right"
                                    Margin="0,18,0,0">
                            <Button x:Name="btnEdit"
                                    Content="Chỉnh sửa"
                                    Background="{StaticResource BPrimary}"
                                    Style="{StaticResource PillButton}"
                                    Click="BtnEdit_Click"/>
                            <Button x:Name="btnSave"
                                    Content="Lưu thay đổi"
                                    Background="{StaticResource BOk}"
                                    Style="{StaticResource PillButton}"
                                    Margin="10,0,0,0"
                                    Visibility="Collapsed"
                                    Click="BtnSave_Click"/>
                            <Button x:Name="btnCancel"
                                    Content="Hủy"
                                    Background="{StaticResource BWarn}"
                                    Style="{StaticResource PillButton}"
                                    Margin="10,0,0,0"
                                    Visibility="Collapsed"
                                    Click="BtnCancel_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
